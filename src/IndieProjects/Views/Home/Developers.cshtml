@model IEnumerable<IndieProjects.Model.Article>

<div>
    @foreach (var article in Model)
    {
        <div>
            <img src="~/@article.ArticleAvatar"/>
            <label>@article.Title</label><br />
            <label id="txt"></label><br />
            @Html.Raw(article.Content)
            <label>@article.Likes.Count</label>
            <a href="~/Home/CurrentArticle/@article.ID">Перейти</a>
        </div><br />
    }
</div>